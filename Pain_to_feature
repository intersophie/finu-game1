<body>
    <div class="game-container">
        <div class="header">
            <h1>üéØ Fin AI Feature Challenge</h1>
            <p>Match real customer pain points with the perfect Fin AI features</p>
        </div>

        <div class="progress-section">
            <div class="progress-info" id="progress-info">Question 1 of 6</div>
            <div class="progress-bar">
                <div class="progress-fill" id="progress-fill"></div>
            </div>
        </div>

        <div class="game-area">
            <div class="pain-card">
                <span class="pain-emoji" id="pain-emoji">ü§î</span>
                <div class="pain-text" id="pain-text">
                    Loading pain point...
                </div>
                <div class="pain-subtitle">Real customer scenario</div>
            </div>

            <div class="instruction-box">
                <div class="instruction-text" id="instruction-text">
                    Select the features that solve this pain point
                </div>
                <div class="selection-counter" id="selection-counter">
                    0 of 1 features selected
                </div>
            </div>

            <div class="features-grid" id="features-grid">
                <!-- Features will be populated here -->
            </div>

            <div class="feedback" id="feedback"></div>

            <div class="controls">
                <div class="score-display">Score: <span id="score">0</span> points</div>
                <button class="btn" id="submit-btn" onclick="checkAnswer()" disabled>
                    Submit Answer
                </button>
                <button class="btn btn-secondary" id="next-btn" onclick="nextQuestion()" style="display: none;">
                    Next Question
                </button>
                <button class="btn btn-secondary" onclick="showHint()">üí° Hint</button>
            </div>
        </div>
    </div>

    <div class="overlay" id="overlay"></div>
    <div class="celebration" id="celebration">
        <h2 id="celebration-title">üéâ Challenge Complete!</h2>
        <p id="celebration-text">You've mastered Fin AI feature mapping!</p>
        <button class="btn btn-success" onclick="restartGame()">Play Again</button>
    </div>

    <script>
        // Game data - EXACTLY from your PDF table
        const gameData = [
            {
                pain: "I have a complicated question I can't find an answer to, nothing feels quite right in the help center",
                correctFeatures: ["Multi-source Generative Answers"],
                emoji: "ü§î"
            },
            {
                pain: "I want to know if my order will arrive by next tuesday and if I order another one, could I get a discount?",
                correctFeatures: ["Multi-source Generative Answers", "Data Connector"],
                emoji: "üì¶"
            },
            {
                pain: "I'm emotional and I don't want to talk to Fin",
                correctFeatures: ["Fin Guidance on escalation", "Tone of Voice"],
                emoji: "üò†"
            },
            {
                pain: "I am interested in a product and I'm lingering on the check-out page",
                correctFeatures: ["Audience & content Targeting", "Outbound messaging"],
                emoji: "üõí"
            },
            {
                pain: "I need to make changes to my subscription, I just want to swap 2 of the products",
                correctFeatures: ["Data Connector", "Fin Tasks", "Multi-source Generative Answers"],
                emoji: "üîÑ"
            },
            {
                pain: "I like to complain on instagram, because I'm a Diva",
                correctFeatures: ["Omni-channel support"],
                emoji: "üì±"
            }
        ];

        // EXACTLY 8 features from your PDF table - NO "Connectors"
        const allFeatures = [
            "Multi-source Generative Answers",
            "Data Connector", 
            "Fin Guidance on escalation",
            "Tone of Voice",
            "Audience & content Targeting",
            "Outbound messaging",
            "Fin Tasks",
            "Omni-channel support"
        ];

        let currentQuestion = 0;
        let selectedFeatures = [];
        let score = 0;

        function initializeGame() {
            currentQuestion = 0;
            score = 0;
            loadQuestion();
            populateFeatures();
            updateProgress();
        }

        function loadQuestion() {
            const question = gameData[currentQuestion];
            
            document.getElementById('pain-emoji').textContent = question.emoji;
            document.getElementById('pain-text').textContent = `"${question.pain}"`;
            
            const requiredCount = question.correctFeatures.length;
            document.getElementById('instruction-text').textContent = 
                `Select ${requiredCount} feature${requiredCount > 1 ? 's' : ''} that solve${requiredCount === 1 ? 's' : ''} this pain point`;
            
            selectedFeatures = [];
            updateSelectionCounter();
            clearFeedback();
        }

        function populateFeatures() {
            const grid = document.getElementById('features-grid');
            grid.innerHTML = '';
            
            // Shuffle features for each question
            const shuffledFeatures = [...allFeatures].sort(() => Math.random() - 0.5);
            
            shuffledFeatures.forEach((feature, index) => {
                const card = document.createElement('div');
                card.className = 'feature-card';
                card.onclick = () => toggleFeature(feature, card);
                card.innerHTML = `
                    <div class="feature-name">${feature}</div>
                `;
                grid.appendChild(card);
            });
        }

        function toggleFeature(featureName, cardElement) {
            const question = gameData[currentQuestion];
            const maxFeatures = question.correctFeatures.length;
            
            if (selectedFeatures.includes(featureName)) {
                // Remove feature
                selectedFeatures = selectedFeatures.filter(f => f !== featureName);
                cardElement.classList.remove('selected');
                const badge = cardElement.querySelector('.selection-badge');
                if (badge) badge.remove();
            } else if (selectedFeatures.length < maxFeatures) {
                // Add feature
                selectedFeatures.push(featureName);
                cardElement.classList.add('selected');
                
                // Add selection badge
                const badge = document.createElement('div');
                badge.className = 'selection-badge';
                badge.textContent = selectedFeatures.length;
                cardElement.appendChild(badge);
            }
            
            updateSelectionCounter();
            updateSubmitButton();
        }

        function updateSelectionCounter() {
            const question = gameData[currentQuestion];
            const required = question.correctFeatures.length;
            const selected = selectedFeatures.length;
            
            document.getElementById('selection-counter').textContent = 
                `${selected} of ${required} features selected`;
        }

        function updateSubmitButton() {
            const question = gameData[currentQuestion];
            const submitBtn = document.getElementById('submit-btn');
            submitBtn.disabled = selectedFeatures.length !== question.correctFeatures.length;
        }

        function updateProgress() {
            const progressPercent = (currentQuestion / gameData.length) * 100;
            document.getElementById('progress-fill').style.width = progressPercent + '%';
            document.getElementById('progress-info').textContent = `Question ${currentQuestion + 1} of ${gameData.length}`;
            document.getElementById('score').textContent = score;
        }

        function checkAnswer() {
            const question = gameData[currentQuestion];
            const correctFeatures = question.correctFeatures;
            
            const isCorrect = selectedFeatures.length === correctFeatures.length &&
                            selectedFeatures.every(feature => correctFeatures.includes(feature));
            
            showFeedback(isCorrect, correctFeatures);
            
            if (isCorrect) {
                score += 10;
                document.getElementById('score').textContent = score;
            }
            
            document.getElementById('submit-btn').style.display = 'none';
            document.getElementById('next-btn').style.display = 'inline-block';
            
            // Disable all feature cards
            document.querySelectorAll('.feature-card').forEach(card => {
                card.classList.add('disabled');
            });
        }

        function showFeedback(isCorrect, correctFeatures) {
            const feedback = document.getElementById('feedback');
            feedback.style.display = 'block';
            
            if (isCorrect) {
                feedback.className = 'feedback correct bounce';
                feedback.innerHTML = 'üéâ Perfect! You identified exactly the right Fin AI features for this scenario.';
            } else {
                feedback.className = 'feedback incorrect';
                feedback.innerHTML = `‚ùå Not quite right. The correct features are:<br><br><strong>${correctFeatures.join(' + ')}</strong>`;
            }
        }

        function clearFeedback() {
            document.getElementById('feedback').style.display = 'none';
        }

        function nextQuestion() {
            if (currentQuestion < gameData.length - 1) {
                currentQuestion++;
                loadQuestion();
                resetInterface();
                updateProgress();
            } else {
                showGameComplete();
            }
        }

        function resetInterface() {
            document.getElementById('submit-btn').style.display = 'inline-block';
            document.getElementById('next-btn').style.display = 'none';
            
            // Re-enable and clear all feature cards
            document.querySelectorAll('.feature-card').forEach(card => {
                card.classList.remove('disabled', 'selected');
                card.style.pointerEvents = 'auto';
                const badge = card.querySelector('.selection-badge');
                if (badge) badge.remove();
            });
        }

        function showHint() {
            const question = gameData[currentQuestion];
            const hints = {
                "I have a complicated question I can't find an answer to, nothing feels quite right in the help center": "Think about AI that can search and generate answers from multiple knowledge sources.",
                "I want to know if my order will arrive by next tuesday and if I order another one, could I get a discount?": "This needs AI answers plus integration with order/pricing systems to check delivery and discounts.",
                "I'm emotional and I don't want to talk to Fin": "Focus on human escalation capabilities and empathetic communication settings.",
                "I am interested in a product and I'm lingering on the check-out page": "Think about detecting user behavior and sending proactive sales messages.",
                "I need to make changes to my subscription, I just want to swap 2 of the products": "This requires data access, automated actions, and AI knowledge combined.",
                "I like to complain on instagram, because I'm a Diva": "Consider support that works across all social media and messaging channels."
            };
            
            const hint = hints[question.pain] || "Think about what type of Fin AI features would solve this specific customer need.";
            alert(`üí° Hint:\n\n${hint}`);
        }

        function showGameComplete() {
            const finalScore = score;
            const maxScore = gameData.length * 10;
            const percentage = Math.round((finalScore / maxScore) * 100);
            
            let message = `You scored ${finalScore} out of ${maxScore} points (${percentage}%)!\n\n`;
            
            if (percentage === 100) {
                message += "üèÜ Perfect score! You're a Fin AI expert!\n\nüçåüçåüçå IF YOU'RE DONE FIRST, SHOUT BANANA TO CLAIM YOUR PRIZE! üçåüçåüçå";
            } else if (percentage >= 80) {
                message += "üåü Excellent! You really understand Fin AI features!";
            } else if (percentage >= 60) {
                message += "üëç Good job! You're learning the feature mapping well!";
            } else {
                message += "üìö Keep practicing! Try again to improve your understanding!";
            }
            
            document.getElementById('celebration-title').textContent = 'üéâ Challenge Complete!';
            document.getElementById('celebration-text').textContent = message;
            showCelebration();
        }

        function showCelebration() {
            document.getElementById('overlay').style.display = 'block';
            document.getElementById('celebration').style.display = 'block';
        }

        function hideCelebration() {
            document.getElementById('overlay').style.display = 'none';
            document.getElementById('celebration').style.display = 'none';
        }

        function restartGame() {
            hideCelebration();
            initializeGame();
        }

        // Initialize the game
        window.addEventListener('load', initializeGame);
    </script>
</body>
</html>
